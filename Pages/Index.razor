<div>
    @if (home == true) {
    }
    @if (Utilities == true || home == true)
    {
        <div class="@className">
            @if (App_Calculator == true)
            {
                <MudPaper Class="MudPaperSmallWidget">
                    <div style="display: flex;">
                    <MudText Style="margin: 5%;">Calculator</MudText>
                    @if (home == true) {
